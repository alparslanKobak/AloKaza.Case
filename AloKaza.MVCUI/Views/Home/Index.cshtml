@model HomePageViewModel

@{
    ViewData["Title"] = "Anasayfa";
}

<hr class="mt-2" />
<partial name="_Slider" model="Model.Sliders" />

@section Scripts{
    <script>
        $(".carousel-item:first").addClass("active")
    </script>
}


<hr />

<div class="text-center mt-3">
<h3 class="display-3">
    <a class="nav-link text-dark" asp-action="Index" asp-controller="News">
        Bizden Haberler
    </a>
</h3>
</div>

<section class="pb-1 mb-4">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 justify-content-center">
            @foreach (var item in Model.News)
            {
                @if (!string.IsNullOrWhiteSpace(item.Image))
                {
                    <div class="col">
                        <a class="nav-link text-dark text-center" href="/News/Detail/@item.Id">
                            <img src="/Img/@item.Image" alt="@item.Title" class="img-thumbnail" />
                            <h3>@item.Title</h3>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</section>

<br />
<hr />